<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                         x:Class="HydroGuide.ViewDetail.ManualDetail"
                         xmlns:model="clr-namespace:HydroGuide.Model"
                         xmlns:viewmodel="clr-namespace:HydroGuide.ViewModel"
                         x:DataType="viewmodel:ManualDetailViewModel"
                         Title="{Binding ManualCategory}">
    <VerticalStackLayout Margin="20,10">
        <Image Source="{Binding ManualImage}" Margin="0,10"/>
        <Label 
            Text="{Binding ManualName}"
            TextColor="#4382BC"
            VerticalOptions="Center" 
            FontAttributes="Bold"
            FontSize="16"
            Margin="0,10"/>
        <Label Text="{Binding ManualDetail, StringFormat='    {0}'}"
       LineHeight="1.15"
       TextColor="#4382BC"
       FontSize="12"/>

    </VerticalStackLayout>
</ContentPage>